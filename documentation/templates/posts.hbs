<section class="posts-archive">
    <header class="archive-header">
        <h1>All Posts</h1>
        {{#if filterTags}}
        <p class="filter-info">Filtered by tags: {{filterTags}}</p>
        {{/if}}
        <p class="post-count">{{total}} posts</p>
    </header>

    {{#if posts}}
    <div class="posts-list">
        {{#each posts}}
        <article class="post-item">
            <div class="post-meta">
                <time datetime="{{date}}">{{formatDate date}}</time>
                {{#if tags}}
                <div class="post-tags">
                    {{#each tags}}
                    <span class="tag">{{this}}</span>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            <h2 class="post-title">
                <a href="{{../baseUrl}}{{path}}">{{title}}</a>
            </h2>
            {{#if (lookup metadata "description")}}
            <p class="post-description">{{lookup metadata "description"}}</p>
            {{/if}}
        </article>
        {{/each}}
    </div>
    {{else}}
    <p class="no-posts">No posts found.</p>
    {{/if}}
</section>
