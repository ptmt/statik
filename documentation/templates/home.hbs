<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">{{siteName}}</h1>
        <p class="hero-description">{{description}}</p>
        <div class="hero-actions">
            <a href="{{baseUrl}}getting-started" class="btn btn-primary">Get Started</a>
            <a href="https://github.com/ptmt/statik" class="btn btn-secondary" target="_blank">View on GitHub</a>
        </div>
    </div>
</section>

<section class="features">
    <div class="features-grid">
        <div class="feature-card">
            <p class="feature-kicker">Setup</p>
            <h3 class="feature-title">Zero Configuration</h3>
            <p class="feature-description">Start writing content immediately. Built-in templates handle layout, navigation, and styling from day one.</p>
        </div>
        <div class="feature-card">
            <p class="feature-kicker">Templating</p>
            <h3 class="feature-title">Handlebars First</h3>
            <p class="feature-description">Layouts, partials, helpers, and datasource access give you fine-grained control over structure and theming.</p>
        </div>
        <div class="feature-card">
            <p class="feature-kicker">Data</p>
            <h3 class="feature-title">Structured by Default</h3>
            <p class="feature-description">Export images, metadata, and custom entities as JSON so front-end code can stay static while feeling dynamic.</p>
        </div>
    </div>
</section>

{{#if posts}}
<section class="posts-section">
    <h2 class="section-title">Latest Posts</h2>
    <div class="posts-grid">
        {{#each posts}}
        <article class="post-card">
            <h3><a href="{{baseUrl}}{{path}}">{{title}}</a></h3>
            <time datetime="{{date}}">{{formatDate date}}</time>
            <div class="excerpt">
                {{excerpt content words=30}}
            </div>
            <a href="{{baseUrl}}{{path}}" class="read-more">Read more â†’</a>
        </article>
        {{/each}}
    </div>
</section>
{{/if}}
