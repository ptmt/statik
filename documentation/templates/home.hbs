<header class="page-header">
    <h1>{{siteName}}</h1>
    <p class="page-description">{{description}}</p>
</header>
<div class="content">
    {{#each posts}}
    <article class="post-preview">
        <h2><a href="{{baseUrl}}{{path}}">{{title}}</a></h2>
        <time datetime="{{date}}">{{formatDate date}}</time>
        <div class="excerpt">
            {{excerpt content words=50}}
        </div>
        <a href="{{baseUrl}}{{path}}" class="read-more">Read more →</a>
    </article>
    {{/each}}

    {{#unless posts}}
    <div class="welcome-message">
        <h2>Welcome to Statik</h2>
        <p>This is a static site generator built with Kotlin. Add your content to the <code>content/</code> directory to get started.</p>
        {{#if featuredPage}}
        <p><a href="{{baseUrl}}{{featuredPage.path}}">{{featuredPage.title}} →</a></p>
        {{/if}}
    </div>
    {{/unless}}
</div>
