{
  "siteName": "Statik - Static Site Generator",
  "description": "A home-made and opinionated static site generator built with Kotlin.",
  "baseUrl": "https://potomushto.com/statik/",
  "author": "Dmitrii Loktev",
  "theme": {
    "templates": "templates",
    "assets": ["static"],
    "output": "docs"
  },
  "paths": {
    "posts": "posts",
    "pages": "pages"
  },
  "staticDatasource": {
    "outputDir": "datasource",
    "collectAttribute": "data-collect",
    "imagesFileName": "images.json"
  }
}
